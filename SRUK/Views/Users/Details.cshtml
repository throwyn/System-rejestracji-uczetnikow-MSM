@if (Model.Papers.Count() > 0)
{
<div class="row">
    <h4>User papers</h4>
    <hr />
    <table class="table table-hover">
        <thead>
            <tr>
                <th style="width:350px;">
                    Title
                </th>
                <th>
                    Status
                </th>
                <th>
                    Season
                </th>
                <th>
                    Creation date
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Papers)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Title, "Details", "Papers", new { Id = item.Id })
                    </td>
                    <td>
                        @switch (item.Status)
                        {
                            case 0:
                                <text>Created</text>
                                break;
                            case 1:
                                <text>Topic approved</text>
                                break;
                            case 2:
                                <text>Topic rejected</text>
                                break;
                            case 3:
                                <text>Accepted</text>
                                break;
                            case 4:
                                <text>Discarded</text>
                                break;
                            case 5:
                                <text>Small mistakes left</text>
                                break;
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Participancy.Season.Name)
                    </td>

                    <td style='color: black; text-align: center; '>
                        @Html.DisplayFor(modelItem => item.CreationDate)
                    </td>
                    <td style='color: black; text-align: center; '>
                        <a asp-action="Edit" asp-controller="Papers" asp-route-id="@item.Id"><span class="glyphicon glyphicon-pencil" aria-hidden="true" data-toggle="tooltip" title="Edit"></span></a> |
                        <a asp-action="Details" asp-controller="Papers" asp-route-id="@item.Id"><span class="glyphicon glyphicon-info-sign" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="Details"></span></a> |
                        <a asp-action="Delete" asp-controller="Papers" asp-route-id="@item.Id"><span class="glyphicon glyphicon-trash" aria-hidden="true" data-toggle="tooltip" title="Delete"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
}
