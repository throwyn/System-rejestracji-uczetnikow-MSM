@model UserIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Users</h2>
@Html.Partial("_StatusMessage", Model.StatusMessage)

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover" style=" width: 100%; word-wrap:break-word;
             table-layout: fixed;">
    <thead>
        <tr>
            <th style="width:100px;">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DegreeSortParm"]">
                    Degree
                    @if (ViewData["DegreeSortParm"].ToString() == "Degree")
                    {<span class="glyphicon glyphicon-sort-by-alphabet-alt" aria-hidden="true" />}
                    @if (ViewData["DegreeSortParm"].ToString() == "degree_desc")
                    {<span class="glyphicon glyphicon-sort-by-alphabet" aria-hidden="true" />}
                </a>
            </th>
            <th style="width:110px;">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["FirstNameSortParm"]">
                    First name
                    @if (ViewData["FirstNameSortParm"].ToString() == "")
                    {<span class="glyphicon glyphicon-sort-by-alphabet-alt" aria-hidden="true" /> }
                    @if (ViewData["FirstNameSortParm"].ToString() == "firstname_desc")
                    {<span class="glyphicon glyphicon-sort-by-alphabet" aria-hidden="true" />}
                </a>
            </th>
            <th style="width:105px;">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["LastNameSortParm"]">
                    Last name
                    @if (ViewData["LastNameSortParm"].ToString() == "LastName")
                    {<span class="glyphicon glyphicon-sort-by-alphabet-alt" aria-hidden="true" /> }
                    else if (ViewData["LastNameSortParm"].ToString() == "lastname_desc")
                    {<span class="glyphicon glyphicon-sort-by-alphabet" aria-hidden="true" />}
                </a>
            </th>
            <th style="width:180px;">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["OrganisationSortParm"]">
                    Organisation
                    @if (ViewData["OrganisationSortParm"].ToString() == "Organisation")
                    {<span class="glyphicon glyphicon-sort-by-alphabet-alt" aria-hidden="true" /> }
                    else if (ViewData["OrganisationSortParm"].ToString() == "organisation_desc")
                    {<span class="glyphicon glyphicon-sort-by-alphabet" aria-hidden="true" />}
                </a>
            </th>
            <th style="width:210px;">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["EmailSortParm"]">
                    Email
                    @if (ViewData["EmailSortParm"].ToString() == "Email")
                    {<span class="glyphicon glyphicon-sort-by-alphabet-alt" aria-hidden="true" /> }
                    else if (ViewData["EmailSortParm"].ToString() == "email_desc")
                    {<span class="glyphicon glyphicon-sort-by-alphabet" aria-hidden="true" />}
                </a>
            </th>
            <th style="width:120px;">
                Phone number
            </th>
            <th style="width:85px;">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["RoleSortParm"]">
                    Role
                    @if (ViewData["RoleSortParm"].ToString() == "Role")
                    {<span class="glyphicon glyphicon-sort-by-alphabet-alt" aria-hidden="true" /> }
                    else if (ViewData["RoleSortParm"].ToString() == "role_desc")
                    {<span class="glyphicon glyphicon-sort-by-alphabet" aria-hidden="true" />}
                </a>
            </th>
            <th style="width:140px;">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["BlockedSortParm"]">
                    Blocked to
                    @if (ViewData["BlockedSortParm"].ToString() == "Blocked")
                    {<span class="glyphicon glyphicon-sort-by-alphabet-alt" aria-hidden="true" /> }
                    else if (ViewData["BlockedSortParm"].ToString() == "blocked_desc")
                    {<span class="glyphicon glyphicon-sort-by-alphabet" aria-hidden="true" />}
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.User)
        {
        <tr @if (item.LockoutEnd.AddHours(1) > DateTime.Now) { @Html.Raw(@" style='color: gray; '") }>

            <td>
                @Html.DisplayFor(modelItem => item.Degree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organisation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
                @if (item.EmailConfirmed)
                {<span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>}
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
                @if (item.PhoneNumberConfirmed)
                {<span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>}
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @if (item.LockoutEnd > DateTime.Now)
                {
                    @item.LockoutEnd.AddHours(DateTime.Now.Hour - DateTime.UtcNow.Hour).ToString("dd.MM.yyyy HH:mm")
                }
            </td>
            <td style='color: black; '>
                <a asp-action="Edit" asp-route-id="@item.Id"><span class="glyphicon glyphicon-pencil" aria-hidden="true"  data-toggle="tooltip" title="Edit"></span></a> |
                <a asp-action="Details" asp-route-id="@item.Id"><span class="glyphicon glyphicon-info-sign" aria-hidden="true" data-toggle="tooltip" title="Details"></span></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><span class="glyphicon glyphicon-trash" aria-hidden="true" data-toggle="tooltip" title="Delete"></span></a>
            </td>
        </tr>
        }
    </tbody>
</table>

<style>
    th {
        text-align: center;
    }
</style>