@model DeleteAccountViewModel
@{
    ViewData["Title"] = "Delete account";
    ViewData.AddActivePage(ManageNavPages.DeleteAccount);
}

@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <h4>Delete account</h4>
    <p>To confirm account deleting enter password below</p>
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default btn-danger">Confirm</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
