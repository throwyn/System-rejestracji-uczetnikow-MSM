@model PaperIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Papers</h2>
@Html.Partial("_StatusMessage", Model.StatusMessage)


@if (ViewBag.IsRegistrationOpened)
{
    <p>
        <a asp-action="Add">Add new</a>
    </p>
}
@if (Model.Papers.Count > 0)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th style="width:350px;">
                    Title
                </th>
                <th>
                    Status
                </th>
                <th>
                    Is paid
                </th>
                <th>
                    Creation date
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Papers)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Title, "Details", "Papers", new { Id = item.Id })
                    </td>
                    <td>
                        @switch (item.Status)
                        {
                            case 0:
                                <text>Created</text>
                                break;
                            case 1:
                                <text>Topic approved</text>
                                break;
                            case 2:
                                <text>Topic rejected</text>
                                break;
                        }
                        @*@Html.DisplayFor(modelItem => item.Status)*@
                    </td>

                    <td style='color: black; text-align: center; '>
                        @Html.DisplayFor(modelItem => item.IsPaid)
                    </td>

                    <td style='color: black; text-align: center; '>
                        @Html.DisplayFor(modelItem => item.CreationDate)
                    </td>
                    <td style='color: black; text-align: center; '>
                        <a asp-action="Edit" asp-route-id="@item.Id"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> |
                        <a asp-action="Details" asp-route-id="@item.Id"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{

}

<style>
    th {
        text-align: center;
    }
</style>