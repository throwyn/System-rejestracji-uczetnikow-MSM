@model PaperIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Papers</h2>
@Html.Partial("_StatusMessage", Model.StatusMessage)


@if (User.IsInRole("Participant") && ViewBag.IsRegistrationOpened )
{
    <p>
        <a asp-action="Add">Add new</a>
    </p>
}
else if (User.IsInRole("Admin"))
{

    <p>
        <a asp-action="Create">Create new</a>
    </p>
}
@if (Model.Papers.Count > 0)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th style="width:350px;">
                    Title
                </th>
                <th style="width:250px;">
                    Author
                </th>
                <th>
                    Status
                </th>
                <th>
                    Creation date
                </th>
                @if (Model.Papers.Where(p => p.Status == 0).Count() > 0)
                {
                    <th>Approve topic</th>
                }
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Papers)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Title, "Details", "Papers", new { Id = item.Id })
                    </td>
                    <td>
                        @Html.ActionLink(item.Author.FirstName + " " + item.Author.LastName, "Details", "Users", new { Id = item.Author.Id })
                    </td>
                    <td>
                        @switch (item.Status)
                        {
                            case 0:
                                <text>Created</text>
                                break;
                            case 1:
                                <text>Topic approved</text>
                                break;
                            case 2:
                                <text>Topic rejected</text>
                                break;
                        }
                        @*@Html.DisplayFor(modelItem => item.Status)*@
                    </td>

                    <td style='color: black; text-align: center; '>
                        @Html.DisplayFor(modelItem => item.CreationDate)
                    </td>
                    @if (item.Status == 0)
                    {
                        <td style='color: black; text-align: center; '>
                            <a asp-action="ApproveTopic" asp-route-id="@item.Id"><span class=" glyphicon glyphicon-ok " aria-hidden="true"></span></a> |
                            <a asp-action="RejectTopic" asp-route-id="@item.Id"><span class=" glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                        </td>
                    }
                    else
                    {
                        <td></td>
                    }
                    <td style='color: black; text-align: center; '>
                        <a asp-action="Edit" asp-route-id="@item.Id"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> |
                        <a asp-action="Details" asp-route-id="@item.Id"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{

}

<style>
    th {
        text-align: center;
    }
</style>