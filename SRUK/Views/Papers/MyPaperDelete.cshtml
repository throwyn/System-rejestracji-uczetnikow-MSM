@model SRUK.Models.MyPaperDetailsViewModel

@{
    ViewData["Title"] = "Delete my paper";
}

<h2>Delete my paper</h2>

<h3>Are you sure you want to delete this paper?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @DictionariesHelper.PaperStatuses[Model.Status]
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Participancy.Season)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Participancy.Season.Name)
        </dd>
    </dl>
    
    <form asp-action="MyPaperDelete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="MyPapers">Back to List</a>
    </form>
</div>
