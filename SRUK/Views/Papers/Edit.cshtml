@model SRUK.Models.PaperEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>
@Html.Partial("_StatusMessage", Model.StatusMessage)

<h4>Paper</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Participancy" />
            <div class="form-group">
                <label asp-for="Participancy.User" class="control-label"></label>:
                @Html.ActionLink(Model.Participancy.User.FirstName + ' ' + Model.Participancy.User.LastName, "Details", "Users", new { Id = Model.Participancy.UserId })
            </div>
            <div class="form-group">
                <label asp-for="Participancy.Season" class="control-label"></label>:
                @Html.Label(Model.Participancy.Season.Name)
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="ViewBag.Statuses"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
