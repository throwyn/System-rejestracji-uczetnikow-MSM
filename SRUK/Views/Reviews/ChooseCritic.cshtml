@model ChooseCriticViewModel

@{
    ViewData["Title"] = "Choosing critic";
}

<h2>Review</h2>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<h4>
    Choosing critic
</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChooseCritic">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PaperVersionId" />
            <div class="form-group">
                @Html.Label("Author")
                @Html.ActionLink(Model.PaperVersion.Paper.Author.FirstName + ' ' + Model.PaperVersion.Paper.Author.LastName, "Details", "Users", new { Id = Model.PaperVersion.Paper.AuthorId })
            </div>
            <div class="form-group">
                @Html.Label("Title")
                @Html.ActionLink(Model.PaperVersion.Paper.Title + ' ' + Model.PaperVersion.Paper.Title, "Details", "Papers", new { Id = Model.PaperVersion.Paper.Id })
            </div>
            <div class="form-group">
                <label asp-for="CriticId" class="control-label"></label>
                <select asp-for="CriticId" class="form-control" asp-items="ViewBag.Critics"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<style>
    th {
        text-align: center;
    }
</style>