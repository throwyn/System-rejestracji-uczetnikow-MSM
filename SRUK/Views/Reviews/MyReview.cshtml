@model SRUK.Models.ReviewDetailsViewModel

@{
    ViewData["Title"] = "Review Details";
}

<h2>Review</h2>

<div>
    <h4>Details</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <h4 style="text-align:center;">Review</h4>
            <dl class="dl-horizontal">
                @if (Model.Recommendation > 1)
                {

                    <dt>
                        @Html.DisplayNameFor(model => model.OriginalFileName)
                    </dt>
                    <dd>
                        <a asp-action="Download" asp-controller="Reviews" asp-route-id="@Model.Id">@Model.OriginalFileName <span class="glyphicon glyphicon-download-alt" aria-hidden="true" data-toggle="tooltip" title="Download review"></span></a>
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Recommendation)
                    </dt>
                    <dd>
                        @DictionariesHelper.RecommendationStatuses[Model.Recommendation]
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.CommentForAdmin)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CommentForAdmin)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.CommentForAuthor)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CommentForAuthor)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.CompletionDate)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CompletionDate)
                    </dd>
                }
                <dt>
                    @Html.DisplayNameFor(model => model.CreationDate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CreationDate)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Deadline)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Deadline)
                </dd>
            </dl>
        </div>
        <div class="col-md-6">
            <h4 style="text-align:center;">Paper</h4>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.PaperVersion.Paper.Title)
                </dt>
                <dd>
                    @Model.PaperVersion.Paper.Title 
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.PaperVersion.OriginalFileName)
                </dt>
                <dd>
                    <a asp-action="Download" asp-controller="PaperVersions" asp-route-id="@Model.PaperVersion.Id">@Model.PaperVersion.OriginalFileName <span class="glyphicon glyphicon-download-alt" aria-hidden="true" data-toggle="tooltip" title="Download paper"></span></a>
                </dd>
            </dl>
        </div>
    </div>
</div>
<div>
    <a asp-action="MyReviews">Back to List</a>
</div>
