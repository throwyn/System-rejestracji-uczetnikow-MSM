@model PaperVersionsAddViewModel

@{
    ViewData["Title"] = "Add paper version";
}

<h2>Add</h2>
@Html.Partial("_StatusMessage", Model.StatusMessage)

<h4>Paper Version</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddVersion" method="post" enctype="multipart/form-data" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PaperId" />
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input type="file" asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MyPapers" asp-controller="Papers">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
